---
import FormattedDate from "@/components/FormattedDate.astro";
import Divider from "@/components/ui/divider";

const {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    author,
    readTime,
    tags,
} = Astro.props as {
    title: string;
    description?: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    author?: string;
    readTime?: number;
    tags?: string[];
};
---
<header class="mb-8 text-center">
    <!-- Title -->
    <h1 class="text-5xl font-bold text-gray-900 mb-10">{title}</h1>

    <!-- Hero Image (Centered) -->
    {
        heroImage && (
            <div class="hero-image w-full max-w-4xl mx-auto my-6 overflow-hidden rounded-lg shadow-lg">
                <img
                    src={heroImage}
                    alt={title}
                    class="w-full max-h-[450px] object-cover rounded-lg"
                />
            </div>
        )
    }

    <!-- Metadata (Author, Date, Read Time) -->
    <div class="text-gray-600 text-md mt-4 flex flex-wrap justify-center gap-4">
        {author && <span class="font-medium">By {author}</span>}
        <span><FormattedDate date={pubDate} /></span>
        {readTime && <span>‚è≥ {readTime} min read</span>}
    </div>

    <!-- Tags (Separate Line) -->
    {
        tags && tags.length > 0 && (
            <div class="flex flex-wrap justify-center gap-2 mt-3">
                <span class="text-sm font-medium text-gray-600">Tags:</span>
                {tags.map((tag) => (
                    <a
                        href={`/tags/${tag}`}
                        class="px-3 py-1 text-xs font-medium text-white bg-blue-500 rounded-full hover:bg-blue-600 transition"
                    >
                        {tag}
                    </a>
                ))}
            </div>
        )
    }
    <!-- Divider -->
    <Divider />
</header>


