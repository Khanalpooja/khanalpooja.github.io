---
import FormattedDate from "@/components/FormattedDate.astro";

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<header class="mb-6">
    {heroImage && (
        <div class="hero-image w-full max-h-[400px] overflow-hidden relative aspect-[16/9]">
            <img 
                src={heroImage} 
                alt={title} 
                class="absolute inset-0 w-full h-full object-cover rounded-lg"
            />
        </div>
    )}

    <div class="title mt-4">
        <div class="date text-gray-600 text-sm">
            <FormattedDate date={pubDate} />
            {updatedDate && (
                <div class="last-updated-on text-xs text-gray-500">
                    Last updated on <FormattedDate date={updatedDate} />
                </div>
            )}
        </div>
        <h1 class="text-4xl font-bold mt-2">{title}</h1>
        <hr class="mt-4" />
    </div>
</header>
