---
import { Card, CardContent } from "@/components/ui/card";

const { src, alt, caption } = Astro.props;
---

<Card className="overflow-hidden rounded-lg shadow-xl md:mx-10">
    <CardContent className="px-5 py-0">
        <figure>
            <img src={src} alt={alt} class="w-full object-cover rounded-t-lg" />
            {caption && (
                <figcaption class="text-center text-md text-gray-600">
                    {caption}
                </figcaption>
            )}
        </figure>
    </CardContent>
</Card>