---
import { Card, CardContent } from "@/components/ui/card";

const { src, alt, caption } = Astro.props;
---

<Card className="overflow-hidden rounded-lg md:mx-10 shadow-2xl ring-1 ring-gray-300/50 ">
    <CardContent className="px-5 py-0">
        <figure>
            <img src={src} alt={alt} class="w-full object-cover rounded-t-lg" />
            {caption && (
                <figcaption class="text-center text-3xl text-gray-600 font-handwritten">
                    {caption}
                </figcaption>
            )}
        </figure>
    </CardContent>
</Card>