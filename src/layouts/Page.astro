---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SITE_IMAGE } from '../consts';

const { title, description} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title ?? SITE_TITLE} description={description ?? SITE_DESCRIPTION} image={SITE_IMAGE}/>
		
	</head>
	<body>
		<Header />
		<main class="max-w-[720px] sm:w-[calc(100%-2px)] mx-auto p-12 px-4">
			<slot />
		</main>
		<Footer />
	</body>
</html>
